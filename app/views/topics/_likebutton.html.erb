<% if current_user && topic.is_like_by(current_user) %>
  <%= link_to "-1", unlike_topic_path(topic, page: params[:page]), :method => :post, :class => "btn btn-primary", :remote => true %>
<% else %>
   <%= link_to "+1", like_topic_path(topic, page: params[:page]), :method => :post, :class => "btn btn-success", remote: true %>
<% end %>
