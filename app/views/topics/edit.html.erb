<%= simple_form_for @topic do |f| %>
  <div class="form-group">
    <%= f.input :name , input_html:{class: "form-control"} %>
    <%= f.association :categories,   as: :check_boxes %>
    <% if @photo.image.present? %>
      <%= image_tag(@photo.image.thumb.url) %>
    <% else %>
      <%= f.simple_fields_for :photo do |c| %>
        <%= c.input "上傳照片", as: :file %>
      <% end %>
    <% end %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submitting....."} %>
<% end %>
<div class="text-center">
  <%= link_to("回上一頁", topics_path, class:'btn btn-primary') %>
</div>
